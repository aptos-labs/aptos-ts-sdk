{
  "name": "@aptos-labs/confidential-assets",
  "version": "0.2.11",
  "author": "",
  "license": "ISC",
  "description": "",
  "sideEffects": false,
  "typesVersions": {
    ">=4.2": {
      "*": [
        "./dist/types/*"
      ]
    }
  },
  "main": "dist/common/index.js",
  "browser": "./dist/esm/index.js",
  "module": "./dist/esm/index.js",
  "node": "./dist/cjs/index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "require": {
        "types": "./dist/common/index.d.ts",
        "default": "./dist/common/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      }
    },
    "./dist/common/cli/index.js": "./dist/common/cli/index.js",
    "./dist/esm/cli/index.mjs": "./dist/esm/cli/index.mjs",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build:clean": "rm -rf dist",
    "build": "pnpm build:clean && tsup",
    "build:types": "tsc -p tsconfig.build.json --outDir ./dist/types --declaration --emitDeclarationOnly",
    "build:cjs": "npx swc src -d ./dist/cjs --config-file .swcrc -C module.type=commonjs --strip-leading-paths --copy-files",
    "build:esm": "npx swc src -d ./dist/esm --config-file .swcrc -C module.type=es6 isModule=true --strip-leading-paths --copy-files",
    "test": "pnpm jest"
  },
  "dependencies": {
    "@aptos-labs/confidential-asset-wasm-bindings": "^0.0.2",
    "@aptos-labs/ts-sdk": "^1.38.0",
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.5.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.2",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.2",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}
