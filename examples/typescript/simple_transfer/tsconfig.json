{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2020",
    "pretty": true
  },
  "include": [
    "src",
    "*.ts"
  ],
  "paths": {
    "@aptos/*": "../..",
  }
}
